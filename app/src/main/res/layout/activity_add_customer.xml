<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_customer"
    android:background="#2C4A58">

    <TextView
        android:id="@+id/txtAddCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Customer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#FDFFFC"
        android:fontFamily="@font/dosisbold"
        app:layout_constraintVertical_bias="0.1"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="wrap_content"
        android:minWidth="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAddCustomer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:backgroundTint="@color/colorWhite"
        android:fontFamily="@font/dosislight"
        android:textColor="@color/colorWhite"
        android:hint="Full Name"
        android:textColorHint="@color/colorWhite"
        android:textAlignment="center"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/edtSalary"
        android:layout_width="wrap_content"
        android:minWidth="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtName"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/colorWhite"
        android:fontFamily="@font/dosislight"
        android:textColor="@color/colorWhite"
        android:hint="Customer Salary"
        android:textColorHint="@color/colorWhite"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        />

    <Button
        android:id="@+id/btnAddCust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtSalary"
        android:layout_marginTop="100dp"
        android:text="Add Customer"
        android:fontFamily="@font/dosisbold"
        android:textColor="@color/colorWhite"
        android:background="@drawable/circular_button"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>