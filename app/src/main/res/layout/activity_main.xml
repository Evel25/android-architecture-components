<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FDFFFC">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/main_back"
        >

        <TextView
            android:id="@+id/textWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textCustomerCount"
            android:text="You Wanna Learn About Android Arch Components Like LiveData + ViewModel + Rome + Reposotories And More This is The Right App Create By Hafid id-baha"
            android:textColor="#FDFFFC"
            android:fontFamily="@font/dosisbold"
            android:textAlignment="center"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            app:layout_constraintVertical_bias="0.7"
            />

        <TextView
            android:id="@+id/textCustomerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="120 Customer"
            android:textColor="#FDFFFC"
            android:fontFamily="@font/dosisbold"
            app:layout_constraintVertical_bias="0.8"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/mainLayout"
        app:layout_constraintTop_toBottomOf="@id/mainLayout"
        android:background="@drawable/circular_button"
        android:src="@drawable/icon_plus"
        />

    <Button
        android:id="@+id/btnCustomers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Customers List"
        android:background="@android:color/transparent"
        android:fontFamily="@font/dosisbold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>